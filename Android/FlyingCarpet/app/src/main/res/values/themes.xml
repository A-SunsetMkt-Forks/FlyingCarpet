<resources>
    <!-- Base application theme. -->
    <style name="Theme.FlyingCarpet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkGreenBlue</item>
        <item name="colorPrimaryVariant">@color/teal</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/statusBarColor</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/tan</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@drawable/button_selector</item>
        <item name="strokeColor">@color/black</item>
        <item name="backgroundTint">@drawable/button_background_selector</item>
    </style>
</resources>